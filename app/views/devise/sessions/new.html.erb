<%= render partial: 'shared/nav', locals: { title: 'LOG IN', nav: 'back', action: '' } %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="mt-2">
    <%= f.label :email, style: "display: none" %>
    <%= f.text_field :email, autofocus: true, class:"form-control", placeholder: "Email", autocomplete: "email"  %>
  </div>

  <div class="mt-2">
    <%= f.label :password, style: "display: none" %>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="m-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions m-2">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
