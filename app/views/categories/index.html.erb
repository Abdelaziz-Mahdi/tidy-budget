

<%= render partial: 'shared/nav', locals: { title: 'Categories', nav: 'menu', action: '' } %>
<p style="color: green"><%= notice %></p>

<ul id="categories" class="container bg-five pt-2">
  <% @categories.each do |category| %>
  <li class="bg-white mt-4 p-2">
    <%= link_to category_expenses_path(category.id) do %>
      <%= render category %>
    <% end %>
  <% end %>
  </li>
</ul>

<nav class="sticky-bottom mt-auto second p-3">
  <div class="border border-light">
    <%= link_to new_category_path, class: "text-center" do %>
      <div class="navbar-brand text-white">Add a new category</div>
    <% end %>
  </div>
</nav>
